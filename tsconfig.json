{
  "compilerOptions": {
    "lib": ["es2021", "DOM"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "jsx": "react",
    "baseUrl": ".",

    "paths": {
      "@client/*": ["client/*"],
      "@server/*": ["server/*"]
    }
  }
}
